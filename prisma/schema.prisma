// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id              String         @id
  status          String
  description     String?
  totalPriceOrder Float?
  paid            Boolean
  createdAt       DateTime
  updatedAt       DateTime       @updatedAt
  products        ProductOrder[]
}

model Product {
  id          String         @id
  name        String
  description String
  price       Float
  categoryId  String
  imageUrl    String
  createdAt   DateTime
  updatedAt   DateTime       @updatedAt
  orders      ProductOrder[]
  category    Category       @relation(fields: [categoryId], references: [id])
}

model Category {
  id        String    @id
  name      String    @unique
  createdAt DateTime
  updatedAt DateTime  @updatedAt
  products  Product[]
}

model ProductOrder {
  id         String   @id
  productId  String
  orderId    String
  quantity   Int
  totalPrice Float
  createdAt  DateTime
  product    Product  @relation(fields: [productId], references: [id])
  order      Order    @relation(fields: [orderId], references: [id])
}
